{
  "compilerOptions": {
    "strict": true,
    "target": "es5",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["dom", "es2017"],
    "jsx": "react",
    "declaration": true,
    "inlineSources": false,
    "outDir": "./lib",
    "importHelpers": true,
    "sourceMap": false,
    "removeComments": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": "./"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "lib"]
}
